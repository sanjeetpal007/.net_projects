@{
}

@model WebApplication2.Models.Entites.Student
<h1>Edit Student</h1>
@if (Model is null)
{
	<p>No student was found with this Id</p>

}
@if (Model is not null)
{
	<form method="post">
		<div class="mt-3">
			<label class="form-label">Id</label>
			<input type="text" class="from-control" asp-for="Id" readonly />

		</div>
		<div class="mt-3">
			<label class="form-label">Name</label>
			<input type="text" class="from-control" asp-for="Name" />

		</div>

		<div class="mt-3">
			<label class="form-label">Email</label>
			<input type="email" class="from-control" asp-for="Email" />

		</div>


		<div class="mt-3">
			<label class="form-label">Phone</label>
			<input type="text" class="from-control" asp-for="Phone" />

		</div>

		<div class="mt-3">


			<input type="checkbox" class="from-check-input" id="Subscribed" asp-for="Subscribed" />
			<label class="form-check-label" for="Subscribed">Subscribed</label>

		</div>


		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>

		</div>
	</form>

}

